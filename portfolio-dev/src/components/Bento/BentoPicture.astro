---
interface Props {
  class?: string;
  title?: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<article
  class={`
  ${Astro.props.class}
  relative rounded-xl
  backdrop-blur-md
  border border-black/10
  shadow-inner shadow-white/10
  overflow-hidden
  group
`}
>
  {
    title && (
      <div class="select-none blur-box h-auto z-20 flex flex-col gap-1 p-4 text-lg md:px-6 absolute bottom-0 text-white bg-neutral-950/80 rounded-2xl rounded-b-none">
        <h2 class="text-2xl font-semibold">{title}</h2>

        {subtitle && (
          <h2 class="text-xl lg:text-xl text-wrap max-w-[700px]">{subtitle}</h2>
        )}
      </div>
    )
  }

  <slot name="image" />
</article>

<style is:inline>
  .blur-box {
    box-shadow: 0 0 20px 20px rgb(10 10 10 / 0.8);
  }
</style>
