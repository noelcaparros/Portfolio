---
interface Props {
  class?: string;
  title?: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<article
  class={`
  ${Astro.props.class}
  relative rounded-xl
  backdrop-blur-md
  shadow-inner shadow-white/10
  overflow-hidden
  group
`}
>
  <slot name="image" />

  <span
    class="absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#E2CBFF_0%,#393BB2_50%,#E2CBFF_100%)]"
  ></span>
  <span
    class="inline-flex h-full w-full cursor-pointer items-center justify-center rounded-xl bg-slate-950 px-3 py-1 text-sm font-medium text-white backdrop-blur-3xl"
  >
    <div
      class="relative z-20 flex h-full select-none flex-col justify-center gap-1 p-4 text-lg md:p-6"
    >
      <h1
        class="text-6xl uppercase font-extrabold text-gradient bg-gradient-to-r from-[#b2a8fd] via-[#8678f9] to-[#c7d2fe] bg-[200%_auto] bg-clip-text text-transparent"
      >
        {title}
      </h1>

      {
        subtitle && (
          <h2 class="text-xl lg:text-xl text-wrap max-w-[700px]">{subtitle}</h2>
        )
      }
    </div>
  </span>
</article>

<style is:inline>
  @keyframes text-gradient {
    to {
      background-position: 200% center;
    }
  }

  .text-gradient {
    -webkit-background-clip: text;
    color: transparent;

    animation: text-gradient 1.5s linear infinite;
  }
</style>
