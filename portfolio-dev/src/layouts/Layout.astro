---
import "@fontsource/quicksand";
import Header from "../components/Header.astro";

interface Props {
  title: string;
  description: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative text-black dark:text-white">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full
      bg-white
      bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]
      dark:bg-neutral-950
       dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Quicksand", sans-serif;
    scroll-behavior: smooth;
  }

  body {
    background: #000;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }

  #header-nav.dark-mode {
    animation: blur-light linear both;
    animation-timeline: scroll();
    animation-range: 0 500px;
  }

  #header-nav.dark-mode {
    animation: blur-dark linear both;
    animation-timeline: scroll();
    animation-range: 0 500px;
  }

  @keyframes blur-light {
    to {
      box-shadow:
        0px 5px 50px -5px rgba(252, 251, 251, 0.1),
        0px 0px 0 1px rgba(251, 251, 251, 0.5);
      background: rgba(251, 251, 251, 0.5);
      backdrop-filter: blur(10px);
    }
  }

  @keyframes blur-dark {
    to {
      box-shadow:
        0px 5px 50px -5px rgba(0, 0, 0, 0.1),
        0px 0px 0 1px rgba(0, 0, 0, 0.5);
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(10px);
    }
  }

  @media (prefers-color-scheme: light) {
    body {
      color: rgba(0, 0, 0, 0.9);
    }
  }

  @media (prefers-color-scheme: dark) {
    body {
      color: rgba(255, 255, 255, 0.9);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
