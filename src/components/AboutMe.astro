---
interface Props {
  translations: {
    [key: string]: any;
  };
}

const { translations } = Astro.props;
---

<h2
  class="text-3xl font-semibold mb-6 flex gap-x-3 items-center justify-center pb-6"
>
  {translations.ABOUT_ME.TITLE}
</h2>

<div class="mx-auto min-h-full l">
  <div class="flex flex-col md:flex-row gap-10">
    <div class="flex-1 p-12">
      <p class="text-lg">
        {translations.ABOUT_ME.DESCRIPTION1}
      </p>
      <br />
      <p class="text-lg">
        {translations.ABOUT_ME.DESCRIPTION2}
      </p>
      <br />
      <p class="text-lg">
        {translations.ABOUT_ME.DESCRIPTION3}
      </p>
      <br />
      <p class="text-lg">
        {translations.ABOUT_ME.DESCRIPTION4}
      </p>
    </div>
    <div
      class="about-me-image flex-1 rounded-xl bg-[url('src/assets/img/aboutMe.jpg') ]"
    >
    </div>
  </div>
</div>

<style is:inline>
  .about-me-image {
    background-image: url("./src/assets/img/aboutMe.jpg");
    background-size: cover;
    background-position: right;
    box-shadow: 0px 0px 10px 5px rgba(0, 0, 0, 0.2);
  }
</style>
